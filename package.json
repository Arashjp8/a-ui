{
    "name": "@arashjafarpour/a-ui",
    "version": "0.0.2",
    "type": "module",
    "files": [
        "dist"
    ],
    "main": "./dist/a-ui.umd.cjs",
    "module": "./dist/a-ui.js",
    "exports": {
        ".": {
            "import": "./dist/a-ui.js",
            "require": "./dist/a-ui.umd.cjs"
        }
    },
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
